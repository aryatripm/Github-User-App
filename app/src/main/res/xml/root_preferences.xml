<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Settings">

        <Preference
            app:icon="@drawable/ic_baseline_translate_24"
            app:key="@string/key_language"
            app:title="@string/change_language" />

        <SwitchPreference
            app:icon="@drawable/ic_baseline_alarm_24"
            app:defaultValue="false"
            app:key="@string/key_reminder"
            app:title="@string/reminder"
            app:summary="Turn Reminder at 09:00"/>

    </PreferenceCategory>

</PreferenceScreen>